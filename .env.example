# Telegram Bot Token (получить у @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Perplexity AI API Key
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Admin Telegram ID (можно узнать через /start у бота)
